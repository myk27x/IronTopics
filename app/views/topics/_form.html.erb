<%= form_for(@topic) do |f| %>
<div id="add_field">
  <div class="field">
    <%= f.label :focus_area %><br>
    <%= f.text_field :focus %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, size: "100px" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>
